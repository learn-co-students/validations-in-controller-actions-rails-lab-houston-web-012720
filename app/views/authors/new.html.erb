<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <% if flash[:errors] %>  
    <ul>
    <% flash[:errors].each do |e| %> 
      <li><%= e %></li>
    <% end %>
    </ul>
  <% end %>
  <br>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>
